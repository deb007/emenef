<% var formattedDate=new Date(fe.ed2).toLocaleDateString('en-US', { weekday: 'short' , day: 'numeric' , month: 'short' ,
    year: 'numeric' }); %>
    <% var formattedDueDate=new Date(fe.ed).toLocaleDateString('en-US', { weekday: 'short' , day: 'numeric' ,
        month: 'short' , year: 'numeric' }); %>

        <div class="task-card">
            <div class="left-indicator"
                style="background-color: <%= fe.isOverdue ? 'var(--danger-color)' : 'var(--warning-color)' %>;"></div>
            <div class="task-header">
                <div class="task-title-section">
                    <h3 class="task-name">
                        <i class="fas fa-tasks"></i>
                        <%= fe.verb %>&nbsp;<%= fe.task %>
                    </h3>
                </div>
                <div class="task-actions">
                    <a href="/add?verb=<%= fe.verb %>&task=<%= fe.task %>" class="action-button done-button"
                        title="Mark as Done">
                        <i class="fas fa-check"></i>
                    </a>
                    <a href="/edit/<%= fe.id %>" class="action-button edit-button" title="Edit Task">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="javascript:void(0);" class="action-button delete-button delete-entry"
                        data-verb="<%= fe.verb %>" data-task="<%= fe.task %>" data-latest-only="true"
                        title="Delete Latest Entry">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a href="javascript:void(0);" class="action-button delete-entry" data-verb="<%= fe.verb %>"
                        data-task="<%= fe.task %>" data-latest-only="false" title="Delete All Entries"
                        style="background-color: var(--danger-color); color: white;">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
            <div class="task-footer">
                <div class="task-meta">
                    <span class="meta-item">
                        <i class="far fa-calendar-alt"></i>
                        <span class="d-none d-md-inline">Last Done: </span>
                        <%= formattedDate %>
                    </span>
                    <span class="meta-item">
                        <i class="fas fa-redo"></i>
                        <span class="d-none d-md-inline">Every</span>&nbsp;<b>
                            <%= fe.frequency %>
                        </b>&nbsp;days
                    </span>
                </div>
                <div class="task-status">
                    <span class="status-badge <%= fe.isOverdue ? '' : 'due-soon' %>">
                        <i class="fas fa-<%= fe.isOverdue ? 'exclamation-circle' : 'clock' %>"></i>
                        <span class="d-none d-md-inline">
                            <%= fe.isOverdue ? 'Overdue by ' + fe.overdueDays + ' days' : 'Due in ' + fe.dueInDays
                                + ' days' %>
                        </span>
                        <span class="d-md-none">
                            <%= fe.isOverdue ? fe.overdueDays + ' days' : fe.dueInDays + ' days' %>
                        </span>
                    </span>
                    <span class="due-date">
                        <%= formattedDueDate %>
                    </span>
                </div>
            </div>
        </div>