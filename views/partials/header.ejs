<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= APP_TITLE %> - <%= page.charAt(0).toUpperCase() + page.slice(1) %>
  </title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <%= APP_TITLE %>
        </a>
        <% if (page !=='login' && page !=='signup' ) { %>
          <!-- Always visible buttons for mobile -->
          <div class="d-flex align-items-center">
            <a class="nav-link text-light d-lg-none me-2" href="/"><i class="fas fa-user"></i></a>
            <a class="nav-link text-light d-lg-none me-2" href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            <button class="btn btn-outline-light d-lg-none me-2" id="themeToggleMobile">
              <i class="fas fa-moon"></i>
            </button>
            <!-- Hamburger menu for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu"
              aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>

          <!-- Desktop menu -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <form class="search-form" action="/browse" method="get">
              <input class="form-control me-2" type="search" name="verb" placeholder="Search by verb" aria-label="Search">
              <input class="form-control me-2" type="search" name="task" placeholder="Search by task" aria-label="Search">
              <button class="btn" type="submit">Search</button>
            </form>
            <ul class="navbar-nav">
              <li class="nav-item d-none d-lg-block">
                <a class="nav-link" href="/"><i class="fas fa-user"></i>
                  <%= user.fullname %>
                </a>
              </li>
              <li class="nav-item d-none d-lg-block">
                <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
              </li>
              <li class="nav-item d-none d-lg-block">
                <button class="btn btn-outline-light ms-2" id="themeToggle">
                  <i class="fas fa-moon"></i>
                </button>
              </li>
            </ul>
          </div>
          <% } %>
      </div>
    </nav>
    <% if (page !=='login' && page !=='signup' ) { %>
      <div class="container mt-3 d-lg-none">
        <form class="d-flex justify-content-center" action="/browse" method="get">
          <input class="form-control me-2" type="search" name="verb" placeholder="Search by verb" aria-label="Search">
          <input class="form-control me-2" type="search" name="task" placeholder="Search by task" aria-label="Search">
          <button class="btn" type="submit">Search</button>
        </form>
      </div>
    <% } %>
  </header>

  <div class="container-fluid">
    <div class="row">
      <% if (page !=='login' && page !=='signup' ) { %>
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link <%= page === 'home' ? 'active' : '' %>" href="/">
                  <i class="fas fa-home"></i> Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= page === 'add' ? 'active' : '' %>" href="/add">
                  <i class="fas fa-plus"></i> Add
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= page === 'browse' ? 'active' : '' %>" href="/browse">
                  <i class="fas fa-th"></i> Browse
                </a>
              </li>
            </ul>
          </div>
        </nav>
        <% } %>

          <!-- Main content -->
          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="container mt-4">
