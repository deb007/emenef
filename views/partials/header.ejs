<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= APP_TITLE %> - <%= page.charAt(0).toUpperCase() + page.slice(1) %></title>
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/style.css">

  <style>
    :root {
      --primary-color: #4e54c8;
      --secondary-color: #8f94fb;
      --text-color: #333;
      --bg-color: #f8f9fa;
      --card-bg: #ffffff;
      --hover-color: #e9ecef;
    }

    [data-bs-theme="dark"] {
      --primary-color: #8f94fb;
      --secondary-color: #4e54c8;
      --text-color: #f8f9fa;
      --bg-color: #333;
      --card-bg: #444;
      --hover-color: #555;
    }

    body {
      font-family: 'Poppins', sans-serif;
      display: flex;
      min-height: 100vh;
      flex-direction: column;
      background-color: var(--bg-color);
      color: var(--text-color);
      transition: all 0.3s ease;
    }

    main {
      flex: 1 0 auto;
    }

    .navbar {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      box-shadow: 0 2px 10px rgba(0,0,0,.1);
    }

    .list-group-item {
      border: none;
      padding: 0.75rem 1.25rem;
      background-color: transparent;
      transition: all 0.3s;
      color: var(--text-color);
    }

    .list-group-item:hover {
      background-color: var(--hover-color);
      transform: translateX(5px);
    }

    .list-group-item i {
      margin-right: 10px;
    }

    .card {
      background-color: var(--card-bg);
      border: none;
      box-shadow: 0 4px 6px rgba(0,0,0,.1);
      transition: all 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,.15);
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
    }
  </style>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><%= APP_TITLE %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <% if (page !== 'login' && page !== 'signup') { %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="/"><i class="fas fa-user"></i> <%= user.fullname %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
              </li>
              <li class="nav-item">
                <button class="btn btn-outline-light ms-2" id="themeToggle">
                  <i class="fas fa-moon"></i>
                </button>
              </li>
            </ul>
          <% } %>
        </div>
      </div>
    </nav>
  </header>

  <main class="py-4">
    <div class="container">
      <% if (page !== 'login' && page !== 'signup') { %>
        <div class="row g-4">
          <div class="col-md-3">
            <div class="list-group shadow-sm">
              <a href="/" class="list-group-item list-group-item-action <%= page === 'home' ? 'active' : '' %>">
                <i class="fas fa-home"></i> Dashboard
              </a>
              <a href="/add" class="list-group-item list-group-item-action <%= page === 'add' ? 'active' : '' %>">
                <i class="fas fa-plus"></i> Add
              </a>
              <a href="/browse" class="list-group-item list-group-item-action <%= page === 'browse' ? 'active' : '' %>">
                <i class="fas fa-th"></i> Browse
              </a>
            </div>
          </div>
          <div class="col-md-9">
      <% } %>
