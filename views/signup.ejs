<%- include('partials/header', {page: 'signup', title: APP_TITLE}); %>

<div class="row" style="margin:2rem;">
  <div class="col s12 z-depth-5">
    <div class="card darken-1">
      <div class="card-content" style="padding-top:8rem;">
        <span class="card-title">Sign Up</span>

        <div class="row">
          <form class="col s12" action="/signup" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <input id="email" type="email" name="email" class="validate" required>
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" name="password" class="validate" required>
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="col s12">
                <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
                  <i class="material-icons right">send</i>
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="row">
          <div class="col s12">
            <p>Already have an account? <a href="/login">Login</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer', {page: 'signup', title: APP_TITLE}); %>
